@model List<AdvertisementAppUserListDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    @{
        if (Model?.Count > 0)
        {
            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>Başvurulan İlan</th>
                        <th>Başvuran Kişi</th>
                        <th>Cinsiyet</th>
                        <th>Başvurunun Durumu</th>
                        <th>Askerlik Durumu</th>
                        <th>Tecil Bitiş Tarihi</th>
                        <th>İş Deneyimi</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertismentAppUser in Model)
                    {
                        <tr>
                            <td>@advertismentAppUser.Advertisement.Title</td>
                            <td>@advertismentAppUser.AppUser.Firstname @advertismentAppUser.AppUser.Surname</td>
                            <td>@advertismentAppUser.AppUser.Gender.Definition</td>
                            <td>@advertismentAppUser.AdvertisementAppUserStatus.Definition</td>
                            <td>@advertismentAppUser.MilitaryStatus.Definition</td>
                            <td>@(advertismentAppUser.EndDate == null ? "Muaf ya da yapmış" : advertismentAppUser.EndDate?.ToString("dddd, dd MMMM yyyy"))</td>
                            <td>@advertismentAppUser.WorkExperience</td>
                            <td>
                                <a href="#">Mülakata Çağır</a>
                                <a href="#">Reddet</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tr>
                    <td></td>
                </tr>
            </table>
        }
        else
        {
            <div class="mb-3 text-center lead">
                Herhangi bir başvuru bulunmamaktadır.
            </div>
        }
    }
</div>



